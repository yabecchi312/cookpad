#kitchen_container.kitchen_recipe_container
  #two_contents_wrapper.clearfix
    #kitchen_side
      .kitchen_side_wrapper.archive
        %h3.content_title
          アーカイブ
        %ul
          %li.selected
            =link_to 'すべて','#'
            %span.item_count
              (50)
          %li
            %span.category_name
              = link_to '2018年','#'
            %span.item_count
              (30)
          %li
            %span.category_name
              = link_to '2017年','#'
            %span.item_count
              (20)
    #kitchen_main
      .recipe_list_header
      #tsukurepo_list
        - @tsukurepos.each do |tsukurepo|
          .tsukurepo_wrapper
            .tsukurepo
              .tsukurepo_inner
                .tsukurepo_info
                  %p.date
                    = simple_time(tsukurepo.created_at)
                    = link_to "[x]", tsukurepo_path(tsukurepo.id), method: :delete,class: "tsukurepo_delete", data: {confirm: 'この献立を削除してよろしいですか?'}
                .image
                  = image_tag tsukurepo.image,class: "image_wh_130x130"
                = link_to "#{tsukurepo.recipe.title}",recipe_path(id:tsukurepo.recipe.id),class: "recipe_title"
                %span.recipe_author
                  by #{tsukurepo.recipe.user.name}
                %p.message
                  = tsukurepo.text
                .clear-both
    .clear_both
