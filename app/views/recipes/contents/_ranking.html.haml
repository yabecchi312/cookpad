.ranking
  .ranking-box
    .ranking-box__title
      = image_tag("https://assets.cpcdn.com/assets/sara/icon_ps_medium@2x.png?de96e90792e583e6f866187cdd6dfb8a8cc7a89990c31d4b2d7e09a9a0cbcb98")
      = link_to "デイリーアクセス数ランキング",recipe_rankings_recipes_path
    = link_to "",recipe_rankings_recipes_path
    .ranking-box-container
      %ul
        - @most_viewed.each.with_index(1) do |rank, i|
          - if i == 1
            %li.ranking-box__list
              = link_to recipe_path(rank), class: "recipe_show" do
                - if rank.image.present?
                  = image_tag(rank.image , class: "side_image image_wh_94x94")
                - else
                  %img.user-avatar__image{ src: "/assets/icon_default.png", class: "side_image image_wh_94x94"}
                %span.ranking-box__list--title
                  %i.fas.fa-crown.fa-lg.my-orange
                  %span.index
                    = "#{i}"
                  = rank.title
                %br
                %span.ranking-box__list--user-name
                  by
                  %span.ranking-box__list--user-name>
                    = rank.user.name
          - elsif i == 2
            %li.ranking-box__list
              = link_to recipe_path(rank), class: "recipe_show" do
                - if rank.image.present?
                  = image_tag(rank.image, class: "side_image image_wh_94x94")
                - else
                  %img.user-avatar__image{ src: "/assets/icon_default.png", class: "side_image image_wh_94x94"}
                %span.ranking-box__list--title
                  %i.fas.fa-crown.fa-lg.my-silver
                  %span.index
                    = "#{i}"
                  = rank.title
                %br
                %span.ranking-box__list--user-name
                  by
                  %span.ranking-box__list--user-name>
                    = rank.user.name
          - else
            %li.ranking-box__list
              = link_to recipe_path(rank), class: "recipe_show" do
                - if rank.image.present?
                  = image_tag(rank.image , class: "side_image image_wh_94x94")
                - else
                  %img.user-avatar__image{ src: "/assets/icon_default.png", class: "side_image image_wh_94x94"}
                %span.ranking-box__list--title
                  %i.fas.fa-crown.fa-lg.bronze
                  %span.index
                    = "#{i}"
                  = rank.title
                %br
                %span.ranking-box__list--user-name
                  by
                  %span.ranking-box__list--user-name>
                    = rank.user.name
      .clear_both
        .ranking-box__more-link
          = link_to "もっと見る", recipe_rankings_recipes_path
